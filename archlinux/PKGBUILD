# Maintainer: Kohei Suzuki <eagletmt@gmail.com>
pkgname=twitter-user-tracker
pkgver=0.1.0
pkgrel=1
arch=('i686' 'x86_64')
url='https://github.com/eagletmt/twitter-user-tracker'
license=('MIT')
depends=('openssl')
makedepends=('cargo')
source=("https://github.com/eagletmt/$pkgname/archive/v$pkgver.tar.gz")

build() {
  cd "$pkgname-$pkgver"
  cargo build --release --locked
}
package() {
  cd "$pkgname-$pkgver"
  mkdir -p "$pkgdir/usr/bin"
  install -m755 target/release/$pkgname "$pkgdir/usr/bin/"
}

sha512sums=('71c03eff81fc086ae5311419c05a1ad3e7eb08bbd91625862f99557d3912e5ac53c87851fc42759eaf7564c5f5a7f3b387e5da54752480919ccc082e963e0568')
